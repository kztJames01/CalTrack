# ===========================================
# CalTrack Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_PASSWORD=caltrack_dev_password_change_me
DATABASE_URL=postgresql://caltrack:caltrack_dev_password_change_me@localhost:5432/caltrack

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=caltrack_redis_password_change_me
REDIS_URL=redis://:caltrack_redis_password_change_me@localhost:6379

# ===========================================
# JWT Authentication
# ===========================================
# Generate secure random strings for production:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-in-production-min-32-chars
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ===========================================
# API Keys - Third Party Services
# ===========================================
# Nutritionix API (https://www.nutritionix.com/business/api)
NUTRITIONIX_APP_ID=your_nutritionix_app_id
NUTRITIONIX_API_KEY=your_nutritionix_api_key

# Google Cloud Vision API
GOOGLE_CLOUD_VISION_API_KEY=your_google_vision_api_key
# Or use service account JSON file path:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Edamam API (alternative to Nutritionix)
# EDAMAM_APP_ID=your_edamam_app_id
# EDAMAM_APP_KEY=your_edamam_app_key

# ===========================================
# File Storage
# ===========================================
# Local development uses local filesystem
# Production should use S3 or similar
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# AWS S3 (for production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=caltrack-photos
# AWS_S3_REGION=us-east-1

# ===========================================
# Email Configuration (Mailhog for dev)
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@caltrack.local

# Production email (e.g., SendGrid, AWS SES)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your_sendgrid_api_key
# SMTP_FROM=noreply@caltrack.com

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
CORS_ORIGIN=http://localhost:19000,http://localhost:8081

# ===========================================
# Mobile App Configuration
# ===========================================
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true

# ===========================================
# Monitoring & Analytics (Optional)
# ===========================================
# Sentry
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ENVIRONMENT=development

# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# ===========================================
# pgAdmin Configuration
# ===========================================
PGADMIN_PASSWORD=admin

# ===========================================
# Feature Flags (Optional)
# ===========================================
ENABLE_PHOTO_RECOGNITION=true
ENABLE_BARCODE_SCANNING=true
ENABLE_AI_SUGGESTIONS=false
ENABLE_SOCIAL_FEATURES=false

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug  # error, warn, info, debug, verbose
LOG_FORMAT=json  # json or pretty
